{% extends "base.twig" %}

{% block content %}
  <div class="container mx-auto py-12">
    <h2 class="text-3xl font-bold text-center mb-8">Contáctanos</h2>
    
    <div class="max-w-lg mx-auto bg-white shadow-lg rounded-lg p-6">
      <form class="space-y-6" id="form-contact" action="/" method="POST">
        
        <!-- Name -->
        <div class="relative">
            <input id="name" name="name" type="text" required
                   class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:border-blue-500"
                   placeholder="Name" />
            <label for="nombre" class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">
              Nombre
            </label>
          </div>
        
        <!-- Email -->
        <div class="relative">
          <input id="email" name="email" type="email" required
                 class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:border-blue-500"
                 placeholder="Email address" />
          <label for="email" class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">
            Dirección de Email
          </label>
        </div>
        
        <!-- Text Area -->
        <div class="relative">
          <textarea id="textarea" name="description" rows="6" required
                    class="w-full border-2 border-gray-300 rounded-md p-2 text-gray-900 focus:outline-none focus:border-blue-500"
                    placeholder="Escribe tu mensaje aquí..."></textarea>
        </div>
        
        <!-- Send button -->
        <div class="relative">
          <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-md px-4 py-2 w-full transition duration-200">
            Enviar
          </button>
        </div>
      </form>
    </div>
  </div>
{% endblock %}
