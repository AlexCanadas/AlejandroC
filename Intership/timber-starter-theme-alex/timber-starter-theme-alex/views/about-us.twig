{% extends "base.twig" %}

{% block content %}
  <div class="container mx-auto py-12">
    <section class="text-center py-12 bg-green-500 text-white">
      <h1 class="text-4xl font-bold mb-4">{{ post.meta('page_title') }}</h1>
      <p class="text-lg">{{ post.meta('page_subtitle') }}</p>
    </section>

    <section class="py-12">
      <div class="max-w-3xl mx-auto">
        {{ post.content }}
      </div>
    </section>
  </div>
{% endblock %}
